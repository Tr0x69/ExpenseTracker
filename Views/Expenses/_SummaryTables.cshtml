@model ChartViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2>Totals</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var total in Model.ChartExpenseList)
                    {
                        <tr>
                            <td>@total.name</td>
                            <td>@total.amount.ToString("C")</td>
                        </tr>
                    }
                    <tr>
                        <td><strong>Total</strong></td>
                        <td><strong>@Model.ChartExpenseList.Sum(t => t.amount).ToString("C")</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Budget</h5>
                    <p class="card-text">@Model.Budget.ToString("C")</p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Expenses</h5>
                    <p class="card-text">@Model.ChartExpenseList.Sum(t => t.amount).ToString("C")</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Balance</h5>
                    <p class="card-text">@((((double)Model.Budget) - Model.ChartExpenseList.Sum(t => t.amount)).ToString("C"))</p>
                </div>
            </div>
        </div>
    </div>
</div>